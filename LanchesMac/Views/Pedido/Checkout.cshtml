@model Pedido;

<h3 class="gio__hang">Thông tin khách hàng</h3>
<hr/>
<form class="form-horizontal" 
    role="form"
    asp-action="Checkout"
    method="post">  
    <div class="row">
        <div class="form-group col-md-6">
            
            <input class="form-control form-control1" placeholder="Họ" asp-for="Nome"/>
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="form-group col-md-6">
          
            <input class="form-control form-control1" placeholder="Tên" asp-for="Sobrenome" />
            <span class="text-danger" asp-validation-for="Sobrenome"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
          
            <input class="form-control form-control1" placeholder="Ghi chú" asp-for="Endereco2"/>
            <span class="text-danger" asp-validation-for="Endereco2"></span>
        </div>
        <div class="form-group col-md-4">
           
            <input class="form-control form-control1" placeholder="Mã Bưu Chính" asp-for="Cep" />
            <span class="text-danger" asp-validation-for="Cep"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            
            <input class="form-control form-control1" placeholder="Địa chỉ" asp-for="Endereco1" />
            <span class="text-danger" asp-validation-for="Endereco1"></span>
        </div>
        <div class="form-group col-md-4">
          
            <input class="form-control form-control1" placeholder="Thành phố" asp-for="Cidade" />
            <span class="text-danger" asp-validation-for="Cidade"></span>
        </div>
        <div class="form-group col-md-4">
            
            <input class="form-control form-control1" placeholder="Quận" asp-for="Estado" />
            <span class="text-danger" asp-validation-for="Estado"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <input class="form-control form-control1" placeholder="Số điện thoại" asp-for="Telefone" />
            <span class="text-danger" asp-validation-for="Telefone"></span>
        </div>
        <div class="form-group col-md-6">
            <input class="form-control form-control1" placeholder="Email" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="form-group col-md-6">
            <input class="btn btn-success"
                type="submit"
                value="Thanh toán"/>
        </div>
        <div class="form-group col-md-6">
            <a class="btn btn__quayve"
                asp-controller="CarrinhoCompra"
                asp-action="Index">
                Quay về giỏ hàng
            </a>
        </div>
    </div>

</form>